#version 330 core

out vec4 FragColor;

in vec2 TexCoords;
in vec3 FragPos;
in vec3 Normal;

uniform vec3 viewPos;
uniform vec3 objCol;
uniform vec3 lightCol;

void main()
{
	vec3 res = vec3(0);
	vec3 lightPos = vec3(1.2, 1, 2);

	float amb = 0.1f;
	res += amb;

	
	vec3 norm = normalize(Normal);
	vec3 lightDir = normalize(lightPos - FragPos);  
	float diff = max(dot(norm, lightDir), 0.0);
	res += diff;

	res *= lightCol * objCol;
	FragColor = vec4(res, 1);
}